@using OnlineShopping.Models.DTO.Product
@model List<ProductAllDto>


<div class="col-12 text-center">
    <h2 class="mb-5">Featured Products</h2>
</div>
@foreach (var item in Model)
{
    <div class="col-lg-4 col-12 mb-3">
        <div class="product-thumb">
            <a href="product-detail.html">
                <img src="@item.Image" class="img-fluid product-image" alt="">
            </a>

            <div class="product-top d-flex">
                <span class="product-alert me-auto">New Arrival</span>

                <a class="bi-heart-fill product-icon text-danger" data-fav-id="@item.Id"></a>
            </div>

            <div class="product-info d-flex">
                <div>
                    <h5 class="product-title mb-0">
                        <a href="product-detail.html" class="product-title-link">@item.Header</a>
                    </h5>

                    <p class="product-p">@item.Description</p>
                </div>

                <small class="product-price text-muted ms-auto mt-auto mb-5">$@item.Price</small>
            </div>
        </div>
    </div>
}

<div class="col-12 text-center">
    <a href="products.html" class="view-all">View All Products</a>
</div>

